generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  LastName String
  email    String   @unique
  role     String
  password String
  adresse  String
  products Products[]
  favs     fav[]
  carts    cart[]
}

model Products {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  category    String
  rating      Float
  price       Float
  num_reviews Int
  images      Image[]
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  favs        fav[]
  carts       cart[]
}

model Image {
  id        Int         @id @default(autoincrement())
  url       String
  productId Int
  product   Products   @relation(fields: [productId], references: [id])
}

model fav {
  id         Int     @id @default(autoincrement())
  user_id    Int
  product_id Int
  user       User    @relation(fields: [user_id], references: [id])
  product    Products @relation(fields: [product_id], references: [id])
}

model cart {
  id         Int     @id @default(autoincrement())
  user_id    Int
  product_id Int
  user       User    @relation(fields: [user_id], references: [id])
  product    Products @relation(fields: [product_id], references: [id])
}
